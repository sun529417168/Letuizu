<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>
    <!--设置窗体半透明start-->
    <style name="translucent">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--设置窗体半透明end-->

    <!--主界面底部的ImageView属性start-->
    <style name="main_image">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:clickable">false</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--主界面底部的ImageView属性end-->

    <!--主界面底部的TextView属性start-->
    <style name="main_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!--主界面底部的TextView属性end-->


    <!-- 设置对话框的透明 和点击外面无效果start -->
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- 设置对话框的透明 和点击外面无效果end -->

    <style name="Theme.picker" parent="android:Theme.Holo.Light">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <!--这里是设置颜色和大小的地方-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>


</resources>
